pipeline {
    agent any

    tools {
        maven 'Maven3'
        jdk 'Java11'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/java-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Java Application...'
                // Deployment steps (e.g., copy JAR/WAR to server)
            }
        }
    }

    post {
        success { echo '✅ Build & Deploy Successful' }
        failure { echo '❌ Pipeline Failed' }
    }
}
